# ExposeChain Environment Configuration
# Copy this file to .env and fill in your values

# Application
EXPOSE_DEBUG=false

# Database (SQLite default, PostgreSQL supported)
EXPOSE_DATABASE_URL=sqlite:///exposechain.db

# Kubernetes
EXPOSE_K8S_IN_CLUSTER=false
# EXPOSE_K8S_KUBECONFIG=~/.kube/config
# EXPOSE_K8S_CONTEXT=my-cluster

# AWS
EXPOSE_AWS_REGION=us-east-1
# EXPOSE_AWS_ACCESS_KEY_ID=
# EXPOSE_AWS_SECRET_ACCESS_KEY=

# Scanning
EXPOSE_SCAN_INTERVAL_SECONDS=300

# API Server
EXPOSE_API_HOST=0.0.0.0
EXPOSE_API_PORT=8000
